<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="inicio_settings_form" model="ir.ui.view">
        <field name="name">report_settings_form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_info']" position="after">
                <page string="Configuracion de reportes">
                   
                    <group string="Cuentas">
                        <field name="x_activo"/>
                        <field name="x_pasivo"/>
                        <field name="x_capital"/>
                        <field name="x_ingresos"/>
                        <field name="x_egresos"/>
                        <field name="x_cierre"/>                        
                    </group>
                    <label for="x_signos" string="Signos" />
                    <field name="x_signos">
                        <tree editable="bottom">
                            <field name="x_name"/>
                            <field name="x_negativo"/>
                        </tree>
                    </field>
                   
                </page>
            </xpath>
        </field>
    </record>

</data>
</odoo>